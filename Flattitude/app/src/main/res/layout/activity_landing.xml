<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackgroundBlue"
    tools:context=".Activities.LandingActivity"
    android:id="@+id/LandingActivityPane"
    android:theme="@style/Base.V7.Widget.AppCompat.EditText">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@color/colorPink"
        android:id="@+id/login_button"
        android:typeface="normal"
        android:textColor="@color/white"
        android:textSize="30px"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/home_button"
        android:layout_above="@+id/map_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@color/white"
        android:id="@+id/register_button"
        android:layout_alignTop="@+id/login_button"
        android:layout_alignParentEnd="true"
        android:typeface="normal"
        android:textColor="@color/colorPink"
        android:textStyle="bold"
        android:textSize="30px"
        android:layout_toEndOf="@+id/home_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logoflattitude"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/login_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/create_flat_button"
        android:layout_alignBottom="@+id/login_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAP"
        android:id="@+id/map_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="false" />


</RelativeLayout>
